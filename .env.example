# ===========================================
# AI RECEPTIONIST CONFIGURATION
# ===========================================

# Twilio Configuration (Required for phone calls)
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# AI Configuration (Choose one provider)
# Options: 'openai', 'anthropic', or 'gemini'
AI_PROVIDER=openai

# OpenAI (if using)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxx

# Anthropic Claude (if using)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxx

# Google Gemini (RECOMMENDED - cheapest and fastest)
GOOGLE_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxx
GEMINI_MODEL=gemini-1.5-flash

# ===========================================
# STRIPE PAYMENTS (Required for subscriptions)
# ===========================================
STRIPE_SECRET_KEY=sk_test_YOUR_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxx

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_BASIC_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PRO_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxx

# ===========================================
# EMAIL NOTIFICATIONS (Optional but recommended)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email addresses
FROM_EMAIL=noreply@your-domain.com
NOTIFY_EMAIL=your-email@gmail.com

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
BASE_URL=https://your-domain.com

# ===========================================
# OPTIONAL: ELEVENLABS FOR BETTER TTS
# ===========================================
ELEVENLABS_API_KEY=your_elevenlabs_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here